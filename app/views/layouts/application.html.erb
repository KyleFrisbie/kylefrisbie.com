<html class="no-js"> <!--<![endif]-->
<head>
  <meta charset="utf-8">
  <title>Kyle L Frisbie</title>
  <meta name="description" content="Kyle L Frisbie's personal blog site.">
  <meta name="viewport" content="width=device-width">

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <!-- Google Webfonts -->
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600%7CPT+Serif:400,400italic' rel='stylesheet' type='text/css'>
</head>
<body>
<header>
  <div class="widewrapper masthead">
    <div class="container">
      <%= link_to "Kyle L Frisbie", @posts_session_path, id: 'logo' %>

      <div id="mobile-nav-toggle" class="pull-right">
        <a href="#" data-toggle="collapse" data-target=".tales-nav .navbar-collapse">
          <i class="fa fa-bars"></i>
        </a>
      </div>

      <nav class="pull-right tales-nav">
        <div class="collapse navbar-collapse">
          <ul class="nav nav-pills navbar-nav">

            <li class="dropdown active">
              <%= link_to "Posts", posts_path %>
            </li>
            <li>
              <% if user_signed_in? %>
                  <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
              <% else %>
                  <%= link_to "Sign in", new_user_session_path %>
              <% end %>
            </li>
          </ul>
        </div>
      </nav>

    </div>
  </div>
</header>

<div class="widewrapper main">
  <div class="container">
    <div class="row">
      <div class="col-md-8 blog-main">
        <p><%= yield %></p>
      </div>
      <aside class="col-md-4 blog-aside">
        <div class="aside-widget">
          <header>
            <h3>Tags</h3>
          </header>
          <div class="body clearfix">
            <ul class="tags">
              <% tags.each do |tag| %>
                  <%= link_to tag.name, tag_path(tag), id: tag, class: "btn btn-default" %>
              <% end %>
            </ul>
          </div>
        </div>
      </aside>
    </div>
  </div>
</div>


<footer>
  <div class="widewrapper copyright">
  </div>
</footer>

</body>
</html>
