<p id="notice"><%= notice %></p>
<% breadcrumb :tag, @tag %>
<h1>
  <% if @tag.name == "project" %>
      Projects
  <% else %>
      Posts with the "<%= @tag.name %>" tag
  <% end %>
</h1>

<% @tag.posts.each do |post| %>
    <div class="col-lg-12 col-md-12 col-sm-12">
      <article class=" blog-teaser">
        <header>
          <%= image_tag post.image_thumbnail_url %>
          <h3><%= link_to post.title, controller: "posts", action: "show", id: post %></h3>
          <span class="meta">
            <%= post.subtitle %><br/>
            <%= post.date_posted %>
          </span>
          <hr>
        </header>
        <div class="body">
          <%= truncate_html(post.post_body, length: 250) %>
        </div>
        <div class="clearfix">
          <%= link_to "Read more", post_path(post), id: post, class: "btn btn-tales-one" %>
        </div>
      </article>
    </div>
<% end %>
