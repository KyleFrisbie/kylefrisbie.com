<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :subtitle %>
    <%= f.input :image_url %>
    <%= f.input :date_posted %>
    <%= f.input :date_modified %>
    <%= f.input :post_body %>
    <%= f.association :user, label_method: :first_name %>
    <%= f.association :tags, as: :check_boxes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
