<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<% @posts.each do |post| %>
    <div class="col-md-6 col-sm-6">
      <article class=" blog-teaser">
        <header>
          <!--image_tag post.image_url-->
          <h3><%= link_to post.title, controller: "posts", action: "show", id: post %></h3>
          <span class="meta">
            <%= post.subtitle %><br/>
            <%= post.date_posted %>
          </span>
          <hr>
        </header>
        <div class="body">
          <%= truncate_html(post.post_body, length: 150) %>
        </div>
        <div class="clearfix">
          <a href="blog-detail.html" class="btn btn-tales-one">Read more</a>
        </div>
      </article>
    </div>
<% end %>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Subtitle</th>
    <th>Date posted</th>
    <th>Date modified</th>
    <th>User</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.subtitle %></td>
        <td><%= post.date_posted %></td>
        <td><%= post.date_modified %></td>
        <td><%= post.user.first_name %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
